#!/bin/bash

ORANGE='\e[0;33m'
NC='\e[0;m'


echo_cmd(){
	echo -e "\t${ORANGE}$1${NC}"
}

cd ~/Documents/robot_compagnon/
#update git
sudo git pull

if [ $# > 1 ]; then
  if [ "$1" = "test" ]; then
    cd Code
    python3 Test.py
    cd ..
    sudo bash script.sh
  else
    echo "commande :"
    echo_cmd "run test"
  fi
else
    echo "commande :"
    echo_cmd "run test"
fi

